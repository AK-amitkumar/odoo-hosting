        <!-- bind to postfix -->
        <record id="app_gitlab_link_postfix" model="clouder.application.link">
            <field name="application_id" ref="app_gitlab"/>
            <field name="name" ref="clouder_template_postfix.app_postfix"/>
            <field name="required" eval="True"/>
