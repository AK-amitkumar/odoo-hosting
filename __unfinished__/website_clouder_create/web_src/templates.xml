<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_frontend" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_clouder_create/web_src/instance_new.js"></script>
            </xpath>
        </template>
        <template id="create_form">
            <t t-call="website.layout">
                <t t-set="additional_title">Shop - Checkout</t>
                <div id="wrap">
                    <div class="container oe_website_clouder_instance">
                        <h1>TEST</h1>
                        <form action="/instance/new/validate" method="post">
                            <div class="row">
                                <div class="col-md-8 oe_cart">
                                    <div class="row">
                                        <div t-attf-class="form-group #{error.get('name') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="contact_name">Your Name</label>
                                            <input type="text" name="name" class="form-control" t-att-value="form_data.get('name')"/>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('street') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="street" style="font-weight: normal">Company Name</label>
                                            <input type="text" name="street" class="form-control" t-att-value="form_data.get('street')"/>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('email') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="contact_name">Email</label>
                                            <input type="email" name="email" class="form-control" t-att-value="form_data.get('email')"/>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('phone') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="phone">Phone</label>
                                            <input type="tel" name="phone" class="form-control" t-att-value="form_data.get('phone')"/>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('street2') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="street2">Street</label>
                                            <input type="text" name="street2" class="form-control" t-att-value="form_data.get('street2')"/>
                                        </div>
                                        <div class="clearfix"/>
                                        <div t-attf-class="form-group #{error.get('city') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="city">City</label>
                                            <input type="text" name="city" class="form-control" t-att-value="form_data.get('city')"/>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('zip') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="zip" style="font-weight: normal">Zip / Postal Code</label>
                                            <input type="text" name="zip" class="form-control" t-att-value="form_data.get('zip')"/>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('country_id') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="country_id">Country</label>
                                            <select name="country_id" class="form-control">
                                                <option value="">Country...</option>
                                                <t t-foreach="countries or []" t-as="country">
                                                    <option t-att-value="country.id" t-att-selected="country.id == form_data.get('country_id')"><t t-esc="country.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                        <div t-attf-class="form-group #{error.get('state_id') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="state_id" style="font-weight: normal">State / Province</label>
                                            <select name="state_id" class="form-control">
                                                <option value="">select...</option>
                                                <t t-foreach="states or []" t-as="state">
                                                    <option t-att-value="state.id" style="display:none;" t-att-data-country_id="state.country_id.id" t-att-selected="state.id == form_data.get('state_id')"><t t-esc="state.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="clearfix"/>
                                        <div t-attf-class="form-group #{error.get('application_id') and 'has-error' or ''} col-lg-6">
                                            <label class="control-label" for="application_id">Application</label>
                                            <select name="application_id" class="form-control">
                                                <option value="">Application...</option>
                                                <t t-foreach="applications or []" t-as="application">
                                                    <option t-att-value="application.id" t-att-selected="application.id == form_data.get('application_id')"><t t-esc="application.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="clearfix">
                                        <input class="btn btn-default btn-primary pull-right mb32" type="submit">Confirm <span class="fa fa-long-arrow-right"/></input>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </t>
        </template>

        <template id="create_validation">
            <t t-call="website.layout">
                <t t-set="additional_title">Shop - Checkout</t>
                <div id="wrap">
                    <div class="container">
                        <h1>TEST</h1>
                        <p>Test result page.

                        Function returned: <t t-esc="res"/>
                        </p>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>