<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Invoicing Settings -->

        <record id="clouder_invoicing_settings_form" model="ir.ui.view">
            <field name="name">Clouder Invoicing Settings</field>
            <field name="model">clouder.invoicing.settings</field>
            <field name="arch" type="xml">
                <form string="Clouder Invoicing Settings" class="oe_form_configuration">
                    <header>
                        <button string="Save" type="object"
                            name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object"
                            name="cancel" class="oe_link"/>
                    </header>
                    <group string="Master Invoice Connection">
                        <div>
                            <field name="master_enabled"/>
                        </div>
                        <group invisible="[('master_enabled','=','1')]"
                        <div>
                            <field name="connection_id">
                                <form>
                                    <group cols="2">
                                        <field name="host"/>
                                        <field name="login"/>
                                        <field name="password"/>
                                    </group>
                                </form>
                            </field>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <!-- Application Invoicing -->
        <record id="view_clouder_application_form_invoicing" model="ir.ui.view">
            <field name="name">clouder.application.form.invoicing</field>
            <field name="inherit_id" ref="clouder.view_clouder_application_form"/>
            <field name="model">clouder.application</field>
            <field name="arch" type="xml">
                <page string="Save" position="after">
                    <page string="Invoicing">
                        <group string="Pricing grid">
                            <field name="pricegrid_ids">
                                <tree>
                                    <field name="threshold"/>
                                    <field name="price"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>
        <!-- Container Invoicing -->
        <record id="view_clouder_container_form_invoicing" model="ir.ui.view">
            <field name="name">clouder.container.form.invoicing</field>
            <field name="inherit_id" ref="clouder.view_clouder_container_form"/>
            <field name="model">clouder.container</field>
            <field name="arch" type="xml">
                <page string="Save" position="after">
                    <page string="Invoicing">
                        <group string="Pricing grid">
                            <field name="pricegrid_ids">
                                <tree>
                                    <field name="threshold"/>
                                    <field name="price"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <!-- Base Invoicing -->
        <record id="view_clouder_base_form_invoicing" model="ir.ui.view">
            <field name="name">clouder.base.form.invoicing</field>
            <field name="inherit_id" ref="clouder.view_clouder_base_form"/>
            <field name="model">clouder.base</field>
            <field name="arch" type="xml">
                <page string="Save" position="after">
                    <page string="Invoicing">
                        <group string="Pricing grid">
                            <field name="pricegrid_ids">
                                <tree>
                                    <field name="threshold"/>
                                    <field name="price"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>
