<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="application_type_shinken" model="clouder.application.type">
            <field name="name">shinken</field>
            <field name="system_user">shinken</field>
        </record>

        <record id="image_shinken" model="clouder.image">
            <field name="name">img_shinken</field>
            <field name="current_version">1</field>
            <field name="parent_from">clouder/clouder-shinken</field>
            <field name="parent_id"/>
            <field name="dockerfile"/>
        </record>
        <record id="image_shinken_volume_shinken" model="clouder.image.volume">
            <field name="image_id" ref="image_shinken"/>
            <field name="name">/usr/local/shinken/etc</field>
            <field name="user">shinken</field>
        </record>
        <record id="image_shinken_port_shinken" model="clouder.image.port">
            <field name="image_id" ref="image_shinken"/>
            <field name="name">http</field>
            <field name="localport">7767</field>
            <field name="expose">internet</field>
        </record>


        <record id="application_shinken" model="clouder.application">
            <field name="name">Shinken</field>
            <field name="code">shinken</field>
            <field name="type_id" ref="application_type_shinken"/>
            <field name="default_image_id" ref="image_shinken"/>
            <field name="base" eval="True"/>
        </record>
        <record id="application_shinken_link_postfix" model="clouder.application.link">
            <field name="application_id" ref="application_shinken"/>
            <field name="name" ref="clouder_template_postfix.application_postfix"/>
            <field name="container" eval="True"/>
            <field name="base" eval="True"/>
            <field name="make_link" eval="True"/>
            <field name="auto" eval="True"/>
            <field name="required" eval="True"/>
        </record>
        <record id="application_shinken_link_shinken" model="clouder.application.link">
            <field name="application_id" ref="application_shinken"/>
            <field name="name" ref="application_shinken"/>
            <field name="base" eval="True"/>
            <field name="container" eval="True"/>
            <field name="auto" eval="True"/>
        </record>
        <record id="application_shinken_link_bind" model="clouder.application.link">
            <field name="application_id" ref="application_shinken"/>
            <field name="name" ref="clouder_template_bind.application_bind"/>
            <field name="base" eval="True"/>
            <field name="auto" eval="True"/>
        </record>
        <record id="application_shinken_link_proxy" model="clouder.application.link">
            <field name="application_id" ref="application_shinken"/>
            <field name="name" ref="clouder_template_proxy.application_proxy"/>
            <field name="base" eval="True"/>
            <field name="auto" eval="True"/>
        </record>

        <record id="application_salt_minion_link_shinken" model="clouder.application.link">
            <field name="application_id" ref="clouder.application_salt_minion"/>
            <field name="name" ref="application_shinken"/>
            <field name="container" eval="True"/>
            <field name="auto" eval="True"/>
        </record>
        <record id="application_postfix_link_shinken" model="clouder.application.link">
            <field name="application_id" ref="clouder_template_postfix.application_postfix"/>
            <field name="name" ref="application_shinken"/>
            <field name="container" eval="True"/>
            <field name="auto" eval="True"/>
        </record>
        <record id="application_bind_link_shinken" model="clouder.application.link">
            <field name="application_id" ref="clouder_template_bind.application_bind"/>
            <field name="name" ref="application_shinken"/>
            <field name="container" eval="True"/>
            <field name="auto" eval="True"/>
        </record>
        <record id="application_proxy_link_shinken" model="clouder.application.link">
            <field name="application_id" ref="clouder_template_proxy.application_proxy"/>
            <field name="name" ref="application_shinken"/>
            <field name="container" eval="True"/>
            <field name="auto" eval="True"/>
        </record>

    </data>
</openerp>
