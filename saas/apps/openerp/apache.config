<VirtualHost *:80>
  ServerName SAAS.DOMAIN
  ProxyRequests Off
  <Proxy *>
    Order deny,allow
    Allow from all
  </Proxy>
  ProxyVia On
  ProxyPass / http://127.0.0.1:PORT/
  <location / >
    ProxyPassReverse /
  </location>
  RequestHeader set "X-Forwarded-Proto" "http"
  SetEnv proxy-nokeepalive 1
</VirtualHost>